<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>GitHub Stars Index | Archive</title>
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Space+Mono:wght@400;700&family=Plus+Jakarta+Sans:wght@300;400;500;600&display=swap" rel="stylesheet">
    <link rel="icon" type="image/svg+xml" href="data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 100 100'><rect width='100' height='100' rx='20' fill='black'/><path d='M50 15L61 41L87 50L61 59L50 85L39 59L13 50L39 41Z' fill='%23ff3e00'/></svg>">

    <style>
        :root {
            --bg: #000000;
            --fg: #ffffff;
            --fg-dim: #777777;
            --accent: #ff3e00; /* Industrial Orange */
            --accent-soft: rgba(255, 62, 0, 0.1);
            --surface: #0a0a0a;
            --border: #1a1a1a;
            --transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
            --modal-overlay: rgba(0, 0, 0, 0.85);
        }

        [data-theme='light'] {
            --bg: #f5f5f5;
            --fg: #111111;
            --fg-dim: #666666;
            --accent: #ff3e00;
            --accent-soft: rgba(255, 62, 0, 0.05);
            --surface: #ffffff;
            --border: #dddddd;
            --modal-overlay: rgba(255, 255, 255, 0.7);
        }

        * { margin: 0; padding: 0; box-sizing: border-box; }

        body {
            background-color: var(--bg);
            color: var(--fg);
            font-family: 'Plus Jakarta Sans', sans-serif;
            line-height: 1.5;
            -webkit-font-smoothing: antialiased;
            overflow-x: hidden;
        }

        /* Scanline & Noise Effect */
        body::before {
            content: "";
            position: fixed;
            inset: 0;
            background: linear-gradient(rgba(18, 16, 16, 0) 50%, rgba(0, 0, 0, 0.2) 50%), 
                        linear-gradient(90deg, rgba(255, 0, 0, 0.05), rgba(0, 255, 0, 0.02), rgba(0, 0, 255, 0.05));
            background-size: 100% 4px, 3px 100%;
            pointer-events: none;
            z-index: 1000;
            opacity: 0.1;
        }

        .container {
            max-width: 1600px;
            margin: 0 auto;
            padding: 4rem 2rem;
        }

        @media (max-width: 768px) {
            .container { padding: 2rem 1rem; }
        }

        /* Header Enhancements */
        header {
            margin-bottom: 6rem;
            display: grid;
            grid-template-columns: 1.5fr 1fr;
            gap: 2rem;
            border-bottom: 2px solid var(--fg);
            padding-bottom: 3rem;
            align-items: end;
        }

        .title-area h1 {
            font-family: 'Bebas Neue', sans-serif;
            font-size: clamp(3.5rem, 15vw, 10rem);
            line-height: 0.9;
            letter-spacing: -0.02em;
        }

        .header-stats {
            display: flex;
            flex-direction: column;
            gap: 1.5rem;
            text-align: right;
            font-family: 'Space Mono', monospace;
        }

        .status-badge {
            display: inline-flex;
            align-items: center;
            gap: 0.6rem;
            font-size: 0.8rem;
            color: var(--accent);
            justify-content: flex-end;
        }

        .status-dot {
            width: 8px;
            height: 8px;
            background: var(--accent);
            border-radius: 50%;
            animation: pulse 1.5s infinite;
        }

        @keyframes pulse {
            0% { transform: scale(1); opacity: 1; }
            50% { transform: scale(1.5); opacity: 0.4; }
            100% { transform: scale(1); opacity: 1; }
        }

        .stats-grid {
            display: flex;
            justify-content: flex-end;
            gap: 2rem;
            font-size: 0.85rem;
            color: var(--fg-dim);
        }

        .stat-item b { color: var(--fg); }

        .top-langs {
            display: flex;
            gap: 0.8rem;
            justify-content: flex-end;
            flex-wrap: wrap;
        }

        .lang-tag {
            font-size: 0.7rem;
            background: var(--surface);
            padding: 0.2rem 0.6rem;
            border: 1px solid var(--border);
        }

        .header-links {
            display: flex;
            gap: 1.5rem;
            justify-content: flex-end;
            margin-top: 1rem;
            align-items: center;
        }

        .lang-toggle {
            cursor: pointer;
            padding: 0.2rem 0.5rem;
            border: 1px solid var(--border);
            font-size: 0.7rem;
            transition: var(--transition);
            background: var(--surface);
            color: var(--fg);
            font-family: 'Space Mono', monospace;
        }

        .lang-toggle:hover {
            border-color: var(--accent);
            color: var(--accent);
        }

        .header-links a {
            color: var(--fg);
            text-decoration: none;
            font-size: 0.8rem;
            border-bottom: 1px solid var(--border);
            transition: var(--transition);
        }

        .header-links a:hover {
            color: var(--accent);
            border-color: var(--accent);
        }

        .theme-toggle {
            cursor: pointer;
            padding: 0.2rem 0.5rem;
            border: 1px solid var(--border);
            font-size: 0.7rem;
            transition: var(--transition);
            background: var(--surface);
            color: var(--fg);
        }

        .theme-toggle:hover {
            border-color: var(--fg);
        }

        #clock {
            font-weight: 700;
            color: var(--fg);
        }

        @media (max-width: 900px) {
            header { 
                grid-template-columns: 1fr; 
                text-align: left; 
                gap: 1.5rem;
                margin-bottom: 3rem;
                padding-bottom: 2rem;
            }
            .header-stats, .stats-grid, .top-langs, .header-links, .status-badge { 
                justify-content: flex-start; 
                text-align: left; 
            }
            .header-stats { gap: 1rem; }
            .stats-grid { gap: 1rem; flex-wrap: wrap; }
            .header-links { flex-wrap: wrap; gap: 0.8rem; }
        }

        /* Search Section */
        .search-section {
            margin-bottom: 4rem;
            position: sticky;
            top: 1rem;
            z-index: 100;
        }

        .search-bar {
            background: var(--bg);
            backdrop-filter: blur(20px);
            border: 1px solid var(--border);
            padding: 0 1.5rem;
            display: flex;
            align-items: center;
            justify-content: space-between;
            min-height: 60px;
        }

        .search-hint {
            font-family: 'Space Mono', monospace;
            font-size: 0.7rem;
            color: var(--fg-dim);
            border: 1px solid var(--border);
            padding: 0.2rem 0.4rem;
            pointer-events: none;
        }

        #search-input {
            background: transparent;
            border: none;
            color: var(--fg);
            width: 100%;
            padding: 1rem 0;
            font-size: 1.1rem;
            font-family: 'Plus Jakarta Sans', sans-serif;
            letter-spacing: 0.05em;
            outline: none;
        }

        @media (max-width: 600px) {
            .search-hint { display: none; }
            #search-input { font-size: 1rem; }
        }
        
        #search-input::placeholder { color: var(--border); }

        /* Grid */
        .repo-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 2rem;
        }

        .repo-card {
            background: var(--surface);
            border: 1px solid var(--border);
            padding: 2rem;
            display: flex;
            flex-direction: column;
            cursor: pointer;
            transition: var(--transition);
            position: relative;
        }

        .repo-card:hover {
            border-color: var(--fg);
            transform: translateY(-5px);
            box-shadow: 0 20px 40px rgba(0,0,0,0.5);
        }

        @media (max-width: 600px) {
            .repo-card { padding: 1.5rem; }
            .card-title { font-size: 1.8rem; }
        }

        .card-lang {
            font-family: 'Space Mono', monospace;
            font-size: 0.7rem;
            text-transform: uppercase;
            color: var(--accent);
            margin-bottom: 1.5rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .card-lang::before {
            content: "";
            width: 8px;
            height: 8px;
            background: var(--accent);
            border-radius: 50%;
        }

        .card-title {
            font-family: 'Plus Jakarta Sans', sans-serif;
            font-size: 1.4rem;
            font-weight: 600;
            margin-bottom: 1rem;
            line-height: 1.3;
            word-break: break-all;
        }

        .card-desc {
            font-size: 0.95rem;
            color: var(--fg-dim);
            margin-bottom: 2rem;
            flex-grow: 1;
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
            line-height: 1.5;
        }

        .card-footer {
            display: flex;
            justify-content: space-between;
            align-items: center;
            font-family: 'Space Mono', monospace;
            font-size: 0.75rem;
            border-top: 1px solid var(--border);
            padding-top: 1.5rem;
        }

        .card-stars { color: var(--fg); font-weight: 700; }

        /* Modal */
        .modal {
            position: fixed;
            inset: 0;
            background: var(--modal-overlay);
            backdrop-filter: blur(10px);
            z-index: 2000;
            display: none;
            opacity: 0;
            transition: opacity 0.3s ease;
            justify-content: center;
            align-items: center;
            padding: 2rem;
        }

        .modal.active { display: flex; opacity: 1; }

        .modal-content {
            background: var(--surface);
            border: 1px solid var(--border);
            max-width: 1000px;
            width: 100%;
            padding: 4rem;
            position: relative;
            transform: scale(0.95);
            transition: var(--transition);
            max-height: 90vh;
            overflow-y: auto;
        }

        .modal.active .modal-content { transform: scale(1); }

        .modal-close {
            position: absolute;
            top: 2rem;
            right: 2rem;
            background: none;
            border: none;
            color: var(--fg);
            font-family: 'Space Mono', monospace;
            cursor: pointer;
            font-size: 1rem;
        }

        .modal-close:hover { color: var(--accent); }

        .modal-title {
            font-family: 'Plus Jakarta Sans', sans-serif;
            font-size: 2.5rem;
            font-weight: 600;
            line-height: 1.2;
            margin-bottom: 2rem;
        }

        .modal-section { margin-bottom: 3rem; }
        .section-label {
            font-family: 'Space Mono', monospace;
            font-size: 0.8rem;
            color: var(--accent);
            text-transform: uppercase;
            margin-bottom: 1rem;
            display: block;
        }

        .modal-desc {
            font-size: 1.1rem;
            line-height: 1.6;
            color: var(--fg-dim);
        }

        .modal-summary {
            font-size: 1.3rem;
            line-height: 1.6;
            color: var(--fg);
        }

        .topic-list {
            display: flex;
            flex-wrap: wrap;
            gap: 0.5rem;
        }

        .topic-tag {
            font-family: 'Space Mono', monospace;
            font-size: 0.75rem;
            padding: 0.3rem 0.6rem;
            border: 1px solid var(--border);
        }

        .modal-actions {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 1rem;
        }

        .btn {
            display: block;
            padding: 1.5rem;
            text-align: center;
            text-decoration: none;
            font-family: 'Bebas Neue', sans-serif;
            font-size: 1.5rem;
            letter-spacing: 0.05em;
            transition: var(--transition);
        }

        .btn-primary { background: var(--fg); color: var(--bg); }
        .btn-secondary { border: 1px solid var(--fg); color: var(--fg); }
        .btn:hover { background: var(--accent); color: var(--bg); border-color: var(--accent); }

        /* Loader */
        #loading-trigger {
            height: 100px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'Space Mono', monospace;
            font-size: 0.8rem;
            color: var(--border);
        }

        @media (max-width: 1100px) { .repo-grid { grid-template-columns: 1fr 1fr; } }
        @media (max-width: 600px) { 
            .repo-grid { grid-template-columns: 1fr; gap: 1rem; } 
            .container { padding-top: 2rem; }
            header { margin-bottom: 2rem; }
        }
        @media (max-width: 768px) { 
            .modal { padding: 0.5rem; }
            .modal-content { 
                padding: 2rem 1.5rem; 
                margin: auto;
                width: 100%;
                height: 100%;
                max-height: 100vh;
                border: none;
                border-radius: 0;
            }
            .modal-actions { grid-template-columns: 1fr; gap: 0.8rem; }
            .btn { padding: 1.2rem; font-size: 1.2rem; }
            .modal-title { font-size: 2.2rem; margin-top: 2rem; }
            .modal-close { top: 1rem; right: 1rem; padding: 0.5rem; z-index: 10;}
            .modal-header-info { flex-direction: column; gap: 1rem; }
            .modal-section { margin-bottom: 2rem; }
        }

        .modal-header-info {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
        }

        /* Footer */
        footer {
            margin-top: 10rem;
            padding: 4rem 0;
            border-top: 1px solid var(--border);
            font-family: 'Space Mono', monospace;
            font-size: 0.7rem;
            color: var(--fg-dim);
            letter-spacing: 0.05em;
        }

        .footer-grid {
            display: grid;
            grid-template-columns: 1fr 1.5fr 1fr;
            gap: 2rem;
            align-items: start;
        }

        .footer-brand .eof-text {
            font-family: 'Bebas Neue', sans-serif;
            font-size: 2.5rem;
            color: var(--fg);
            line-height: 1;
            margin-bottom: 0.5rem;
            display: block;
        }

        .footer-center {
            text-align: center;
            border-left: 1px solid var(--border);
            border-right: 1px solid var(--border);
            padding: 0 2rem;
        }

        .footer-right {
            text-align: right;
        }

        .footer-tag {
            color: var(--accent);
            margin-top: 1rem;
            display: block;
        }

        @media (max-width: 768px) {
            .footer-grid { grid-template-columns: 1fr; text-align: left; }
            .footer-center { border: none; padding: 0; text-align: left; }
            .footer-right { text-align: left; }
        }
        /* Custom Scrollbar */
        ::-webkit-scrollbar {
            width: 10px;
        }
        ::-webkit-scrollbar-track {
            background: var(--bg);
        }
        ::-webkit-scrollbar-thumb {
            background: var(--border);
            border: 2px solid var(--bg);
            border-radius: 10px;
        }
        ::-webkit-scrollbar-thumb:hover {
            background: var(--accent);
        }

        /* Back to Top Button */
        .back-to-top {
            position: fixed;
            bottom: 2rem;
            right: 2rem;
            width: 3.5rem;
            height: 3.5rem;
            background: var(--surface);
            border: 2px solid var(--border);
            color: var(--fg);
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: var(--transition);
            opacity: 0;
            visibility: hidden;
            z-index: 1000;
            backdrop-filter: blur(10px);
        }
        .back-to-top.visible {
            opacity: 1;
            visibility: visible;
        }
        .back-to-top:hover {
            border-color: var(--accent);
            color: var(--accent);
            transform: translateY(-5px);
        }
        @media (max-width: 768px) {
            .back-to-top {
                bottom: 1.5rem;
                right: 1.5rem;
                width: 3rem;
                height: 3rem;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <header>
            <div class="title-area">
                <h1>Stars<br>Archive</h1>
            </div>
            <div class="header-stats">
                <div class="status-badge">
                    <div id="clock">00:00:00</div>
                    <span>UTC+0800</span>
                    <div class="status-dot"></div>
                </div>

                <div class="top-langs">
                    {% for lang in top_langs %}
                    <span class="lang-tag">{{ lang.name }} ({{ lang.count }})</span>
                    {% endfor %}
                </div>

                <div class="stats-grid">
                    <span class="stat-item">INDEXED: <b>{{ last_updated.split(' ')[0] if last_updated else 'UNDEFINED' }}</b></span>
                    <span class="stat-item">ENTRIES: <b>{{ repos|length }}</b></span>
                </div>

                <div class="header-links">
                    <button id="lang-btn" class="lang-toggle">LANG: ZH_CN</button>
                    <button id="theme-btn" class="theme-toggle">UI_THEME: NOIR_MODE</button>
                    <a href="https://github.com/iblogc/GithubStarsIndex" target="_blank">[ SOURCE_CODE ]</a>
                </div>
            </div>
        </header>

        <section class="search-section">
            <div class="search-bar">
                <input type="text" id="search-input" placeholder="SEARCH_KEYWORD_OR_TAG...">
                <div class="search-hint">PRESS [/] TO FOCUS</div>
            </div>
        </section>

        <main class="repo-grid" id="main-grid"></main>
        
        <div id="loading-trigger">SYSTEM LOADING...</div>

        <footer>
            <div class="footer-grid">
                <div class="footer-brand">
                    <span class="eof-text">EOF</span>
                    <span>END OF TRANS STREAM // ALL SYSTEMS NOMINAL</span>
                </div>
                <div class="footer-center">
                    <p>THIS DATA IS CURATED FROM GITHUB AND SUMMARIZED BY AI AGENTS.</p>
                    <p>REPOSITORY INDEXED BY {{ ai_model|upper }} // PERSISTENT STORAGE ACTIVE</p>
                </div>
                <div class="footer-right">
                    <span>© 2026 STARS ARCHIVE</span>
                    <span class="footer-tag">POWERED BY: JINJA2 // PYTHON // GITHUB</span>
                </div>
            </div>
        </footer>
        <button id="back-to-top" class="back-to-top" title="BACK_TO_TOP">
            <svg viewBox="0 0 24 24" width="24" height="24" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round"><line x1="12" y1="19" x2="12" y2="5"></line><polyline points="5 12 12 5 19 12"></polyline></svg>
        </button>
    </div>

    <!-- Details Modal -->
    <div id="details-modal" class="modal">
        <div class="modal-content">
            <button class="modal-close" onclick="closeModal()">[ ESC_CLOSE ]</button>
            
            <div class="modal-section modal-header-info">
                <div>
                    <div id="m-lang" class="card-lang" style="margin-bottom: 1rem;"></div>
                    <h2 id="m-name" class="modal-title" style="margin-bottom: 0.5rem;"></h2>
                    <div style="display: flex; gap: 2rem; align-items: center; margin-bottom: 1.5rem; font-family: 'Space Mono', monospace; font-size: 0.9rem;">
                        <div id="m-stars" style="color: var(--accent); font-weight: 700; font-size: 1.2rem;"></div>
                        <div id="m-updated" style="color: var(--fg-dim);"></div>
                    </div>
                    <div id="m-topics" class="topic-list"></div>
                </div>
            </div>

            <div class="modal-section">
                <span id="l-desc" class="section-label">ORIGINAL_DESCRIPTION</span>
                <p id="m-desc" class="modal-desc"></p>
            </div>

            <div class="modal-section">
                <span id="l-sum" class="section-label">AI_GENERATED_SUMMARY</span>
                <p id="m-summary" class="modal-summary"></p>
                <div id="m-tags" class="topic-list" style="margin-top: 1rem;"></div>
            </div>

            <div class="modal-actions">
                <a id="m-github" href="#" target="_blank" class="btn btn-primary">VIEW_ON_GITHUB</a>
                <a id="m-home" href="#" target="_blank" class="btn btn-secondary">VISIT_HOMEPAGE</a>
            </div>
        </div>
    </div>

    <script>
        // Data Injection
        const RAW_DATA = {{ repos|tojson }};
        
        let filteredData = [...RAW_DATA];
        let currentIndex = 0;
        let currentLang = localStorage.getItem('lang') || 'zh';
        const PAGE_SIZE = 24;
        
        const grid = document.getElementById('main-grid');
        const trigger = document.getElementById('loading-trigger');
        const searchInput = document.getElementById('search-input');
        const modal = document.getElementById('details-modal');
        const langBtn = document.getElementById('lang-btn');

        const I18N = {
            zh: {
                search: "搜索关键字或标签...",
                updated: "更新时间",
                loading: "系统加载中...",
                end: "已加载全部档案",
                no_match: "未找到匹配项",
                orig_desc: "原生项目描述",
                ai_sum: "AI 生成摘要",
                no_sum: "暂无摘要可用。",
                github_btn: "前往 GitHub",
                home_btn: "访问项目官网"
            },
            en: {
                search: "SEARCH KEYWORDS OR TAGS...",
                updated: "UPDATED",
                loading: "SYSTEM_LOADING...",
                end: "END_OF_ARCHIVE",
                no_match: "NO_MATCH_FOUND",
                orig_desc: "ORIGINAL_DESCRIPTION",
                ai_sum: "AI_GENERATED_SUMMARY",
                no_sum: "No summary available.",
                github_btn: "VIEW_ON_GITHUB",
                home_btn: "VISIT_HOMEPAGE"
            }
        };

        function updateTexts() {
            const texts = I18N[currentLang];
            searchInput.placeholder = texts.search;
            langBtn.textContent = `LANG: ${currentLang === 'zh' ? 'ZH_CN' : 'EN_US'}`;
            
            // Re-render grid to update cards
            grid.innerHTML = '';
            currentIndex = 0;
            loadMore();
        }

        // Render functions
        function createCard(item) {
            const card = document.createElement('article');
            card.className = 'repo-card';
            const texts = I18N[currentLang];
            
            // Handle dual language data
            const summary = item.summary[currentLang] || item.summary.zh || texts.no_sum;
            
            card.innerHTML = `
                <div class="card-lang">${item.language || 'DATA'}</div>
                <h2 class="card-title">${item.full_name}</h2>
                <p class="card-desc">${summary}</p>
                <div class="card-footer">
                    <span class="card-stars">☆ ${item.stars}</span>
                    <span>${texts.updated}: ${item.updated_at}</span>
                </div>
            `;
            card.onclick = () => openModal(item);
            return card;
        }

        function loadMore() {
            if (currentIndex >= filteredData.length) {
                trigger.textContent = 'END_OF_ARCHIVE';
                return;
            }
            
            const nextBatch = filteredData.slice(currentIndex, currentIndex + PAGE_SIZE);
            nextBatch.forEach(item => {
                grid.appendChild(createCard(item));
            });
            currentIndex += PAGE_SIZE;
        }

        // Search logic
        searchInput.addEventListener('input', (e) => {
            const query = e.target.value.toLowerCase().trim();
            const keywords = query.split(/\s+/).filter(k => k.length > 0);
            grid.innerHTML = '';
            currentIndex = 0;
            
            filteredData = RAW_DATA.filter(item => {
                const tagsZh = (item.summary.tags_zh || item.summary.tags || []).join(' ');
                const tagsEn = (item.summary.tags_en || []).join(' ');
                const searchStr = `${item.full_name} ${item.description || ''} ${item.summary.zh} ${item.summary.en || ''} ${tagsZh} ${tagsEn} ${item.topics ? item.topics.join(' ') : ''}`.toLowerCase();
                
                return keywords.every(kw => searchStr.includes(kw));
            });
            
            loadMore();
            trigger.textContent = filteredData.length > 0 ? 'SYSTEM_LOADING...' : 'NO_MATCH_FOUND';
        });

        // Infinite Scroll
        const observer = new IntersectionObserver((entries) => {
            if (entries[0].isIntersecting) loadMore();
        }, { rootMargin: '400px' });

        observer.observe(trigger);

        // Modal Logic
        function openModal(item) {
            const texts = I18N[currentLang];
            document.getElementById('m-lang').textContent = item.language || 'DATA';
            document.getElementById('m-name').textContent = item.full_name;
            document.getElementById('m-stars').textContent = `☆ ${item.stars}`;
            document.getElementById('m-updated').textContent = `${texts.updated}: ${item.updated_at}`;
            document.getElementById('m-desc').textContent = item.description || (currentLang === 'zh' ? '暂无项目描述。' : 'No original description.');
            
            document.getElementById('l-desc').textContent = texts.orig_desc;
            document.getElementById('l-sum').textContent = texts.ai_sum;
            
            document.getElementById('m-summary').textContent = item.summary[currentLang] || item.summary.zh;
            document.getElementById('m-github').textContent = texts.github_btn;
            document.getElementById('m-github').href = item.url;
            
            const homeBtn = document.getElementById('m-home');
            homeBtn.textContent = texts.home_btn;
            if (item.homepage) {
                homeBtn.href = item.homepage;
                homeBtn.style.display = 'block';
            } else {
                homeBtn.style.display = 'none';
            }

            // Topics
            const topicsContainer = document.getElementById('m-topics');
            topicsContainer.innerHTML = '';
            (item.topics || []).forEach(t => {
                const span = document.createElement('span');
                span.className = 'topic-tag';
                span.textContent = t.toUpperCase();
                topicsContainer.appendChild(span);
            });

            // AI Tags
            const tagsContainer = document.getElementById('m-tags');
            tagsContainer.innerHTML = '';
            
            const tagsField = currentLang === 'zh' ? 'tags_zh' : 'tags_en';
            const tags = item.summary[tagsField] || item.summary.tags || [];
            
            tags.forEach(t => {
                const span = document.createElement('span');
                span.className = 'topic-tag';
                span.style.borderColor = 'var(--accent)';
                span.textContent = `#${t.toUpperCase()}`;
                tagsContainer.appendChild(span);
            });

            modal.classList.add('active');
            document.body.style.overflow = 'hidden';
        }

        function closeModal() {
            modal.classList.remove('active');
            document.body.style.overflow = 'auto';
        }

        window.onclick = (e) => { if (e.target == modal) closeModal(); }
        document.addEventListener('keydown', (e) => { if (e.key === 'Escape') closeModal(); });
        
        // Initial load
        loadMore();

        // Real-time Clock
        function updateClock() {
            const now = new Date();
            const timeStr = now.toLocaleTimeString('en-GB', { hour12: false });
            document.getElementById('clock').textContent = timeStr;
        }
        setInterval(updateClock, 1000);
        updateClock();

        // Keyboard Shortcut [/]
        document.addEventListener('keydown', (e) => {
            if (e.key === '/' && document.activeElement !== searchInput) {
                e.preventDefault();
                searchInput.focus();
            }
        });

        // Theme Toggle
        const themeBtn = document.getElementById('theme-btn');
        const setTheme = (theme) => {
            document.documentElement.setAttribute('data-theme', theme);
            localStorage.setItem('theme', theme);
            themeBtn.textContent = theme === 'dark' ? 'UI_THEME: NOIR_MODE' : 'UI_THEME: LIGHT_MODE';
        };

        themeBtn.addEventListener('click', () => {
            const currentTheme = document.documentElement.getAttribute('data-theme');
            setTheme(currentTheme === 'dark' ? 'light' : 'dark');
        });

        // Initialize theme from storage (Default: light)
        const savedTheme = localStorage.getItem('theme') || 'light';
        setTheme(savedTheme);

        // Language Toggle
        langBtn.addEventListener('click', () => {
            currentLang = currentLang === 'zh' ? 'en' : 'zh';
            localStorage.setItem('lang', currentLang);
            updateTexts();
        });

        // Back to Top Logic
        const backToTop = document.getElementById('back-to-top');
        window.addEventListener('scroll', () => {
            if (window.scrollY > 300) {
                backToTop.classList.add('visible');
            } else {
                backToTop.classList.remove('visible');
            }
        });
        backToTop.addEventListener('click', () => {
            window.scrollTo({ top: 0, behavior: 'smooth' });
        });

        // Initialize texts
        updateTexts();
    </script>
</body>
